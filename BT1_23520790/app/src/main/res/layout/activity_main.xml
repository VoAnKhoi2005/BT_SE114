<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/MNV_Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã nhân viên:"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/MNV_Textbox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="23520790"
        android:background="@drawable/border"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/MNV_Label"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/Name_Label"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Họ và tên:"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/MNV_Textbox"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/Name_Textbox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Password"
        android:background="@drawable/border"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/Name_Label"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/Address_Label"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Địa chỉ:"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/Name_Textbox"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/Address_Textbox"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text=""
        android:background="@drawable/border"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/Address_Label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/LogOutButtom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Log out"
        app:layout_constraintTop_toBottomOf="@id/Address_Textbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>